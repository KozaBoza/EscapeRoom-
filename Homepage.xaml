<UserControl x:Class="EscapeRoom.Views.Homepage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="500" Height="300"
             Background="#5528c2"
             FontFamily="Segoe UI Black"
             Foreground="White">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE">
            <TextBlock Text="{Binding CurrentUserName}" FontWeight="Bold" Margin="0,0,20,0"/>
            <Button Content="Pokoje" Command="{Binding NavigateCommand}" CommandParameter="Rooms" Margin="0,0,10,0"/>
            <Button Content="Rezerwacje" Command="{Binding NavigateCommand}" CommandParameter="Reservations" Margin="0,0,10,0"/>
            <Button Content="Płatności" Command="{Binding NavigateCommand}" CommandParameter="Payments" Margin="0,0,10,0"/>
            <Button Content="Wyloguj" Command="{Binding LogoutCommand}" Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
        <ContentControl Content="{Binding CurrentView, Converter={StaticResource ViewNameToViewConverter}}"/>
    </DockPanel>
</UserControl>
