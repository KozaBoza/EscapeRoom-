<Window x:Class="EscapeRoom.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EscapeRoom.ViewModels"
        xmlns:views="clr-namespace:EscapeRoom.Views"
        mc:Ignorable="d"
        Title="Escape Room - Panel"
        Width="500" Height="300"
        WindowStartupLocation="CenterScreen"
        Background="#5528c2"
        Foreground="White"
        FontFamily="Segoe UI Black">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Background="#252525" Height="146" Width="501">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="46.907"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding CurrentUserName}" FontWeight="Bold" VerticalAlignment="Top" Margin="0,65,397,0" Grid.Column="1" Height="30" 
                       RenderTransformOrigin="1.189,0.9" Visibility="{Binding IsLogoutVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Height="40" Margin="93,0,99,0" RenderTransformOrigin="0.499,1.214">
                <Button Content="POKOJE" Command="{Binding NavigateCommand}" CommandParameter="RoomView" Width="81" Height="43" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Background="#FFF8568D" Foreground="White"/>
                <Button Content="REZERWACJE" Command="{Binding NavigateCommand}" CommandParameter="ReservationView" Margin="0" Width="86" BorderBrush="{x:Null}" Background="#FF602DC8" FontFamily="Segoe UI Black" Foreground="#FFF8F0F0"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" RenderTransformOrigin="0.482,9.153" Margin="93,92,0,10" HorizontalAlignment="Left" Width="175">
                <Button Content="RECENZJE" Command="{Binding NavigateCommand}" CommandParameter="ReviewView" Margin="0" Width="81" Background="#FFF05541" BorderBrush="{x:Null}" Foreground="#FFFFF7F7" FontFamily="Segoe UI Black" Height="42"/>
                <Button Content="PŁATNOŚCI" Command="{Binding NavigateCommand}" CommandParameter="PaymentView" Margin="0" Width="86" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Foreground="#FFF9F5F5" Background="#FF16A570" Height="41"/>
            </StackPanel>

            <Button Content="WYLOGUJ" Command="{Binding LogoutCommand}" Margin="273,54,91,0" Grid.Column="1" VerticalAlignment="Top" Height="82" RenderTransformOrigin="-2.387,2.77"
                     Visibility="{Binding IsLogoutVisible, Converter={StaticResource BoolToVisibilityConverter}}" BorderBrush="{x:Null}" Background="#FFFBBE53" Foreground="#FFFFF4F4" Click="Button_Click"/>
        </Grid>

        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:RoomViewModel}">
                    <views:RoomView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReservationViewModel}">
                    <views:ReservationFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
                    <views:PaymentView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReviewViewModel}">
                    <views:ReviewView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:UserViewModel}">
                    <views:UserView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </DockPanel>
</Window>
