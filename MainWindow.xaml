<Window x:Class="EscapeRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EscapeRoom.ViewModels"
        xmlns:views="clr-namespace:EscapeRoom.Views"
        mc:Ignorable="d"
        Title="Escape Room - Panel"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Pasek nawigacyjny -->
        <Grid DockPanel.Dock="Top" Background="#EEE" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding CurrentUserName}" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0" Grid.Column="0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Pokoje" Command="{Binding NavigateCommand}" CommandParameter="RoomView" Margin="5,0"/>
                <Button Content="Rezerwacje" Command="{Binding NavigateCommand}" CommandParameter="ReservationView" Margin="5,0"/>
                <Button Content="Płatności" Command="{Binding NavigateCommand}" CommandParameter="PaymentView" Margin="5,0"/>
                <Button Content="Recenzje" Command="{Binding NavigateCommand}" CommandParameter="ReviewView" Margin="5,0"/>
                <Button Content="Użytkownicy" Command="{Binding NavigateCommand}" CommandParameter="UserView" Margin="5,0"/>
            </StackPanel>

            <Button Content="Wyloguj" Command="{Binding LogoutCommand}" Margin="10,0" Grid.Column="2" VerticalAlignment="Center"/>
        </Grid>

        <!-- Obszar główny na aktualny widok -->
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:RoomViewModel}">
                    <views:RoomView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReservationViewModel}">
                    <views:ReservationFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
                    <views:PaymentView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReviewViewModel}">
                    <views:ReviewView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:UserViewModel}">
                    <views:UserView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </DockPanel>
</Window>
