<Window x:Class="EscapeRoom.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EscapeRoom.ViewModels"
        xmlns:views="clr-namespace:EscapeRoom.Views"
        mc:Ignorable="d"
        Title="Escape Room - Panel"
        Width="1000" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#252525"
        Foreground="White"
        FontFamily="Segoe UI Black"
        Closing="Window_Closing">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#333333" Foreground="White">
            <MenuItem Header="_Plik">
                <MenuItem Header="_Wyjście" Click="OnMenuFileExitClick"/>
            </MenuItem>
            <MenuItem Header="_Widok">
                <MenuItem Header="_Pełny ekran" Click="OnMenuViewFullScreenClick"/>
            </MenuItem>
            <MenuItem Header="_Pomoc">
                <MenuItem Header="_O programie" Click="OnMenuHelpAboutClick"/>
            </MenuItem>
        </Menu>

        <ContentControl x:Name="MainContentControl" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </ContentControl>

        <Grid DockPanel.Dock="Bottom" Background="#252525" Height="155" Width="848">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="46.907"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding CurrentUserName}" FontWeight="Bold" VerticalAlignment="Top" Margin="0,73,742,0" Grid.Column="1" Height="22" 
                       RenderTransformOrigin="1.189,0.9" Visibility="{Binding IsLogoutVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="93,0,99,51" RenderTransformOrigin="0.499,1.214" >
                <Button Content="POKOJE" Click="OnRoomsButtonClick" Width="288" Height="58" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Background="#FFF8568D" Foreground="#252525"/>
                <Button Content="REZERWACJE" Click="OnReservationButtonClick" Width="256" BorderBrush="{x:Null}" Background="#FF602DC8" FontFamily="Segoe UI Black" Foreground="#252525" Height="58"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" RenderTransformOrigin="0.482,9.153" Margin="93,84,0,10" HorizontalAlignment="Left" Width="544"  >
                <Button Content="KONTAKT" Click="OnContactButtonClick" Width="288" Background="#FFF05541" BorderBrush="{x:Null}" Foreground="#252525" FontFamily="Segoe UI Black" Height="56" />
                <Button Content="USTAWIENIA KONTA" Click="OnUserButtonClick" Margin="0" Width="255" BorderBrush="{x:Null}" FontFamily="Segoe UI Black" Foreground="#252525" Background="#FF16A570" Height="56" />
            </StackPanel>
           
            <Button Content="LOGOWANIE" Click="OnLoginButtonClick" Margin="637,23,9,71" Grid.Column="1" RenderTransformOrigin="-2.387,2.77"
                    Visibility="{Binding IsLogoutVisible, Converter={StaticResource BoolToVisibilityConverter}}" BorderBrush="{x:Null}" Background="#FFFBBE53" Foreground="#252525" />
            <Button Content="WYLOGUJ" Click="OnLogoutButtonClick" Margin="637,84,9,10" Grid.Column="1" RenderTransformOrigin="-2.387,2.77"
                     Visibility="{Binding IsLogoutVisible, Converter={StaticResource BoolToVisibilityConverter}}" BorderBrush="{x:Null}" Background="#FF6B73" Foreground="#252525" />

            <Button Content="ADMIN" Click="OnAdminButtonClick" Margin="637,23,9,76" Grid.Column="1" RenderTransformOrigin="-2.387,2.77"
        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" 
        BorderBrush="{x:Null}" Background="#FF6B73" Foreground="#252525" />
        </Grid>
    </DockPanel>
</Window>