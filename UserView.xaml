<UserControl x:Class="EscapeRoom.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="600" Height="400"
             Background="#252525"
             FontFamily="Segoe UI Black"
             Foreground="White">
    <Grid Margin="24,49,59,24">
        <StackPanel Margin="131,0,83,0">
            <TextBlock Text="USTAWIENIA" FontSize="18" FontWeight="Bold" Margin="0,0,0,14" TextAlignment="Center" Background="#FF2788DF"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="IMIE:" Width="80"/>
                <TextBox Text="{Binding Imie, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditing}" Width="128"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="NAZWISKO:" Width="80"/>
                <TextBox Text="{Binding Nazwisko, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditing}" Width="129"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="E-MAIL:" Width="80"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditing}" Width="128"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="TELEFON:" Width="80"/>
                <TextBox Text="{Binding Telefon, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsEditing}" Width="128"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="ADMIN:" Width="80"/>
                <CheckBox IsChecked="{Binding Admin}" IsEnabled="{Binding IsEditing}" Width="129" Checked="CheckBox_Checked"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="EDYTUJ"
                        Command="{Binding EditCommand}"
                        IsEnabled="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Margin="0,0,8,0" Width="66" Height="28" BorderBrush="{x:Null}" Foreground="#FF252525" Background="#FF2788DF"/>
                <Button Content="ZAPISZ"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsValid}"
                        Margin="0,0,8,0" Width="62" Background="#FF46EB4D" BorderBrush="{x:Null}" Foreground="#FF252525"/>
                <Button Content="ANULUJ"
                        Command="{Binding CancelCommand}"
                        IsEnabled="{Binding IsEditing}" Width="62" BorderBrush="{x:Null}" Foreground="#FF252525" Background="#FFE1E364"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

    