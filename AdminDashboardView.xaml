<UserControl x:Class="EscapeRoom.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             xmlns:local="clr-namespace:EscapeRoom.Helpers"
             Width="500" Height="300" Foreground="White"
             Background="#5528c2"
             FontFamily="Segoe UI Black">
    <UserControl.Resources>
        <controls:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

	<Grid Margin="20">
		<StackPanel>
			<TextBlock Text="Panel administratora" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Liczba pokoi: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalRooms}" Margin="5,0"/>
				<TextBlock Text="(aktywnych: " FontWeight="Bold"/>
				<TextBlock Text="{Binding ActiveRooms}" Margin="2,0"/>
				<TextBlock Text=")"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Rezerwacje: " FontWeight="Bold"/>
				<TextBlock Text="Oczekujące: "/>
				<TextBlock Text="{Binding PendingReservations}" Margin="2,0"/>
				<TextBlock Text="Zatwierdzone: " Margin="10,0"/>
				<TextBlock Text="{Binding ConfirmedReservations}" Margin="2,0"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Użytkownicy: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalUsers}" Margin="5,0"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Przychód całkowity: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalRevenue, StringFormat=C}" Margin="5,0"/>
			</StackPanel>

			<TextBlock Text="Ostatnie rezerwacje:" FontWeight="Bold" Margin="0,10,0,5"/>
			<ListBox ItemsSource="{Binding RecentReservations}" Height="100">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Description}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

			<TextBlock Text="Ostatnio zarejestrowani użytkownicy:" FontWeight="Bold" Margin="0,10,0,5"/>
			<ListBox ItemsSource="{Binding RecentUsers}" Height="100">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding FullName}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

			<TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,10,0,0"/>
			<ProgressBar IsIndeterminate="True"
                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                         Height="4" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</UserControl>
