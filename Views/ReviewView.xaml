<UserControl x:Class="EscapeRoom.Views.ReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="600" Height="400"
             Background="#252525"
             FontFamily="Segoe UI Black"
             Foreground="White" >
    <Grid Margin="1" RenderTransformOrigin="0.465,0.514">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,43,315,19" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.105"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock Text="OPINIA" FontWeight="Bold" FontSize="30" TextAlignment="Center" Height="46" Width="286" Foreground="#FF1F1F1F" Background="#FFF8F5F1" />
            <TextBlock Text="{Binding UserViewModel.Imie}" FontWeight="Bold" />
            <TextBlock Text="{Binding RatingText}" Foreground="Goldenrod" Margin="0,2,0,0"/>
            <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,4,0,0" Height="139" Width="310" Background="#FF1E1D1D"/>
            <TextBlock Text="{Binding CreatedAtText}" FontStyle="Italic" Foreground="Gray" FontSize="10" Margin="0,4,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Button Content="WYSLIJ"
                        Command="{Binding SubmitReviewCommand}"
                        IsEnabled="{Binding IsValid}"
                        Margin="0,0,8,0" Width="142" Height="54" BorderBrush="{x:Null}" Foreground="#FF252525" Background="#FF16A570"/>
                <Button Content="USUN"
                        Command="{Binding DeleteReviewCommand}"
                        IsEnabled="{Binding Id, Converter={StaticResource GreaterThanZeroConverter}}" Width="132" BorderBrush="{x:Null}" Foreground="#FF252525" Background="#FFF05541"/>
            </StackPanel>
        </StackPanel>
        <ListBox Grid.Column="1" ItemsSource="{Binding ReviewsForRoom}" Margin="100,10,10,10" BorderBrush="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Email}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CreatedAtText}" FontSize="10" Foreground="#252525"/>
                            <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</UserControl>

    