<UserControl x:Class="EscapeRoom.Views.ReservationHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EscapeRoom.ViewModels"
             mc:Ignorable="d">

    <Grid Background="#252525">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="TWOJE REZERWACJE" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10" 
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <ListView Grid.Row="1" 
                  ItemsSource="{Binding UserReservations}" 
                  Margin="20"
                  Background="Transparent"
                  BorderThickness="1"
                  BorderBrush="Gray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" 
                            BorderThickness="1" 
                            Padding="15" 
                            Margin="5"
                            CornerRadius="5"
                            Width="500">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Room Name - Changed binding -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                     Text="{Binding NazwaPokoju}" 
                                     FontWeight="Bold" 
                                     FontSize="18"
                                     Foreground="#FF8BC34A"/>

                            <!-- Status -->
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Status}" 
                                     Foreground="White"
                                     HorizontalAlignment="Right"/>

                            <!-- Date and Time -->
                            <StackPanel Grid.Row="1" Grid.Column="0" 
                                      Orientation="Horizontal" 
                                      Margin="0,10,0,0">
                                <TextBlock Text="Data: " 
                                         Foreground="White"/>
                                <TextBlock Text="{Binding DataRozpoczecia, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                         Foreground="White"/>
                            </StackPanel>

                            <!-- Number of Players -->
                            <StackPanel Grid.Row="2" Grid.Column="0" 
                                      Orientation="Horizontal" 
                                      Margin="0,5,0,0">
                                <TextBlock Text="Liczba graczy: " 
                                         Foreground="White"/>
                                <TextBlock Text="{Binding LiczbaOsob}"
                                         Foreground="White"/>
                            </StackPanel>

                            <!-- Room Difficulty - Changed binding -->
                            <StackPanel Grid.Row="3" Grid.Column="0" 
                                      Orientation="Horizontal" 
                                      Margin="0,5,0,0">
                                <TextBlock Text="Poziom trudności: " 
                                         Foreground="White"/>
                                <TextBlock Text="{Binding Trudnosc}"
                                         Foreground="White"/>
                                <TextBlock Text="/5" 
                                         Foreground="White"/>
                            </StackPanel>

                            <!-- Price - Changed binding -->
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                     Text="{Binding Cena, StringFormat='{}{0:C}'}"
                                     Foreground="White"
                                     HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,5"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>