<UserControl x:Class="EscapeRoom.Views.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EscapeRoom.Views">
	<Grid Margin="40">
		<StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Kontakt" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

			<TextBlock Text="Imię i nazwisko"/>
			<TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

			<TextBlock Text="Adres e-mail"/>
			<TextBox Text="{Binding Email}" Margin="0,0,0,10"/>

			<TextBlock Text="Wiadomość"/>
			<TextBox Text="{Binding Message}" AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>

			<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,10"/>
			<Button Content="Wyślij"
                    Command="{Binding SendCommand}"
                    IsEnabled="{Binding CanSend}"/>
			<TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</UserControl>
