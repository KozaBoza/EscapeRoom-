<UserControl x:Class="EscapeRoom.Views.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="40">
		<StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Kontakt" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
			<TextBox Text="{Binding Name}" PlaceholderText="Imię i nazwisko" Margin="0,0,0,10"/>
			<TextBox Text="{Binding Email}" PlaceholderText="Adres e-mail" Margin="0,0,0,10"/>
			<TextBox Text="{Binding Message}" PlaceholderText="Wiadomość" AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>
			<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,10"/>
			<Button Content="Wyślij"
                    Command="{Binding SendCommand}"
                    IsEnabled="{Binding CanSend}"/>
			<TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</UserControl>
