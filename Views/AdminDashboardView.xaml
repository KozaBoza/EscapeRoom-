<UserControl x:Class="EscapeRoom.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="20">
		<StackPanel>
			<TextBlock Text="Panel administratora" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Liczba pokoi: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalRooms}" Margin="5,0"/>
				<TextBlock Text="(aktywnych: " FontWeight="Bold"/>
				<TextBlock Text="{Binding ActiveRooms}" Margin="2,0"/>
				<TextBlock Text=")" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Rezerwacje: " FontWeight="Bold"/>
				<TextBlock Text="Oczekujące: " />
				<TextBlock Text="{Binding PendingReservations}" Margin="2,0"/>
				<TextBlock Text="Zatwierdzone: " Margin="10,0"/>
				<TextBlock Text="{Binding ConfirmedReservations}" Margin="2,0"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Użytkownicy: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalUsers}" Margin="5,0"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
				<TextBlock Text="Przychód całkowity: " FontWeight="Bold"/>
				<TextBlock Text="{Binding TotalRevenue, StringFormat=C}" Margin="5,0"/>
			</StackPanel>
			<TextBlock Text="Ostatnie rezerwacje:" FontWeight="Bold" Margin="0,10,0,5"/>
			<ListBox ItemsSource="{Binding RecentReservations}">
				<!-- Możesz zdefiniować DataTemplate dla szczegółów rezerwacji -->
			</ListBox>
			<TextBlock Text="Ostatnio zarejestrowani użytkownicy:" FontWeight="Bold" Margin="0,10,0,5"/>
			<ListBox ItemsSource="{Binding RecentUsers}">
				<!-- Możesz zdefiniować DataTemplate dla szczegółów użytkownika -->
			</ListBox>
			<TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,10,0,0"/>
			<ProgressBar IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" Height="4" Margin="0,10,0,0"/>
		</StackPanel>
	</Grid>
</UserControl>
